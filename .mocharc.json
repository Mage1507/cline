{
	"extension": [
		"ts"
	],
	"spec": [
		"src/**/__tests__/*.ts",
		"src/**/*.test.ts"
	],
	"ignore": [
		"src/test/**/*.test.ts",
		"src/test/e2e/**/*.test.ts"
	],
	"require": [
		"ts-node/register",
		"source-map-support/register",
		"./src/test/requires.ts"
	],
	"recursive": true,
	"exit": true
}
